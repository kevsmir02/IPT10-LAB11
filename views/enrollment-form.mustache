<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="mb-4">Enrollment Form</h1>
        
        <form action="/enroll" method="POST">
            <div class="mb-3">
                <label for="course" class="form-label">Course</label>
                <select name="course_code" id="course" class="form-select">
                    {{#courses}}
                    <option value="{{course_code}}">{{course_name}}</option>
                    {{/courses}}
                </select>
            </div>

            <div class="mb-3">
                <label for="student" class="form-label">Students</label>
                <select name="student_code" id="student" class="form-select">
                    {{#students}}
                    <option value="{{student_code}}">{{student_name}}</option>
                    {{/students}}
                </select>
            </div>

            <div class="mb-3">
                <label for="enrolment_date" class="form-label">Enrollment Date</label>
                <input type="date" name="enrolment_date" id="enrolment_date" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Enroll Student</button>
        </form>

        <hr class="my-4">
        
        <ul class="list-unstyled">
            <li><a href="/courses" class="btn btn-outline-secondary">List of courses</a></li>
            <li><a href="/students" class="btn btn-outline-secondary mt-2">List of students</a></li>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
