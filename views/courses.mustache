<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="mb-4">Courses</h1>
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Course Code</th>
                    <th>Number of Enrollees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#items}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{course_name}}</td>
                    <td>{{course_code}}</td>
                    <td>{{enrolled_students}}</td>
                    <td>
                        <a class="btn btn-primary me-2" href="/export-course/{{course_code}}">Export to PDF</a>
                        <a class="btn btn-primary" href="/courses/{{course_code}}">View Course</a>
                    </td>
                </tr>
                {{/items}}
            </tbody>
        </table>

        <a class="btn btn-success mt-3" href="/enrollment-form">Enroll a Student</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
